<!DOCTYPE html>
<html lang="de" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/css/dashboard.css">
  </head>
  <body>
    <div class="container-fluid mt-4">
      <header>
        <%- include('includes/header') %>
      </header>
      <main>
        <div class="row">
          <!-- State Changes -->
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title mb-0">Letzte Status√§nderungen</h5>
              </div>
              <div class="card-body">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Benutzer</th>
                      <th>Status</th>
                      <th>Zeit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% stateChanges.forEach(function(entry) { %>
                      <tr>
                        <td><%= entry.username %></td>
                        <td><span class="<%= entry.event_type === 'aktiviert' ? 'text-success' : 'text-danger' %>">
                          <%= entry.event_type %>
                        </span></td>
                        <td><%= new Date(entry.timestamp).toLocaleString('de-DE', { 
                          hour: '2-digit', 
                          minute: '2-digit',
                          day: '2-digit',
                          month: '2-digit',
                          year: 'numeric'
                        }) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
                <a href="/dashboard/state-changes" class="btn btn-primary btn-sm w-100">Alle anzeigen</a>
              </div>
            </div>
          </div>

          <!-- Bewegungssensor -->
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title mb-0">Letzte Bewegungen</h5>
              </div>
              <div class="card-body">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Status</th>
                      <th>Zeit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% bewegungen.forEach(function(entry) { %>
                      <tr>
                        <td><span class="text-warning"><%= entry.status %></span></td>
                        <td><%= new Date(entry.timestamp).toLocaleString('de-DE', { 
                          hour: '2-digit', 
                          minute: '2-digit',
                          day: '2-digit',
                          month: '2-digit',
                          year: 'numeric'
                        }) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
                <a href="/dashboard/bewegungssensor" class="btn btn-primary btn-sm w-100">Alle anzeigen</a>
              </div>
            </div>
          </div>

          <!-- Lichtschranke -->
          <div class="col-md-4">
            <div class="card">
              <div class="card-header">
                <h5 class="card-title mb-0">Letzte Lichtschranken-Events</h5>
              </div>
              <div class="card-body">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Status</th>
                      <th>Zeit</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% lichtschranke.forEach(function(entry) { %>
                      <tr>
                        <td><span class="text-warning"><%= entry.status %></span></td>
                        <td><%= new Date(entry.timestamp).toLocaleString('de-DE', { 
                          hour: '2-digit', 
                          minute: '2-digit',
                          day: '2-digit',
                          month: '2-digit',
                          year: 'numeric'
                        }) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
                <a href="/dashboard/lichtschranke" class="btn btn-primary btn-sm w-100">Alle anzeigen</a>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
